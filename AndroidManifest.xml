            android:name="com.example.im.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.im.activity.MainActivity" >
        </activity>
        <activity android:name="com.example.im.activity.LoginActivity" >
        </activity>
        <activity android:name="com.example.im.activity.ChartActivity" >
        </activity>
    </application>

</manifest>